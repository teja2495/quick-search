<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme for the app -->
    <style name="Theme.QuickSearch" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Keep window translucent throughout -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- Completely disable splash screen -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>

        <!-- Disable animations and configure window -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>


</resources>